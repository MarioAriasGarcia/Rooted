<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Huertos"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/añadir_huerto_1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/color_button"
        android:text="Huerto 1"
        android:textSize="30dp"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/añadir_huerto_2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/color_button"
        android:text="Huerto 2"
        android:textSize="30dp"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/añadir_huerto_3"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/color_button"
        android:text="Huerto 3"
        android:textSize="30dp"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/añadir_huerto_4"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/color_button"
        android:text="Huerto 4"
        android:textSize="30dp"
        android:textAllCaps="false"

        />


    <Button
        android:id="@+id/volver_menu_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#DAFFAD"
        android:text="Volver al Menú Principal"
         />

</LinearLayout>