<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombre_planta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la planta"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/fecha_plantacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de plantación: "
        android:textSize="20sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/fecha_riego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Próximo riego: "
        android:textSize="20sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/fecha_recogida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de recogida: "
        android:textSize="20sp"
        android:padding="8dp" />

    <!-- Contenedor del ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Texto con la fecha de hoy -->
            <TextView
                android:id="@+id/fecha_hoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de hoy: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="8dp" />

            <!-- Texto indicando si toca regar -->
            <TextView
                android:id="@+id/toca_regar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Es hora de regar!!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="8dp" />

            <!-- Texto indicando si toca recoger -->
            <TextView
                android:id="@+id/toca_recoger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Es hora de recoger!!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="8dp" />

            <!-- Botón "Ya he regado hoy" -->
            <Button
                android:id="@+id/boton_regado_hoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya he regado hoy"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="#31A6D9"
                android:padding="12dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="10dp"/>
            <!-- Botón "Ya he recogido hoy" -->
            <Button
                android:id="@+id/boton_recogido_hoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya he recogido hoy"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="#FA8913"
                android:padding="12dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/añadir_foto"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/color_button"
        android:text="Ver galería"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <!-- Botón para eliminar un huerto -->
    <Button
        android:id="@+id/eliminar_planta"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/color_button_delete"
        android:text="ELIMINAR PLANTA"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"/>

    <!-- Botón para volver al menú principal -->
    <Button
        android:id="@+id/volver_atras_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#DAFFAD"
        android:layout_marginTop="10dp"
        android:text="Volver atrás"/>
</LinearLayout>
