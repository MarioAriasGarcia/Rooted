<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:text="Enciclopedia"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la planta a añadir"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/spinner_buscar_plantas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        />

    <Button
        android:id="@+id/agregar_planta_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:text="Añadir planta a la enciclopedia"
        android:backgroundTint="#DAFFAD"
        android:layout_marginTop="50dp"
        android:background="@drawable/color_button"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />


    <Button
        android:id="@+id/buscar_planta_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:text="Buscar planta"
        android:backgroundTint="#DAFFAD"
        android:background="@drawable/rounded_rectangle"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/volver_menu_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#DAFFAD"
        android:text="Volver al Menú Principal"/>
</LinearLayout>
